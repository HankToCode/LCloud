<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <com.app.cloud.view.CommonTitleView
        android:id="@+id/llCommonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:icon_back="@mipmap/common_icon_back" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mSmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/my_04_bg"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="28dp"
                    android:text="微信号管理"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_18"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAccountNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="绑定账号：2/3"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@id/tvLab"
                    app:layout_constraintTop_toBottomOf="@id/tvLab" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/my_ioon_tutorial"
                    android:gravity="center"
                    android:text="绑定教程"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/tvAccountNum"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvLab" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/mCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="4dp"
                    app:contentPadding="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tvAccountNum">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <com.coorchice.library.SuperTextView
                            android:layout_width="6dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="2dp"
                            app:stv_corner="2dp"
                            app:stv_left_bottom_corner="true"
                            app:stv_left_top_corner="true"
                            app:stv_shaderEnable="true"
                            app:stv_shaderEndColor="@color/colorE6352C"
                            app:stv_shaderStartColor="@color/colorE6352C" />

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="机器人管理"
                            android:textColor="@color/color222222"
                            android:textSize="@dimen/font_16"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    app:layout_constraintTop_toBottomOf="@id/mCardView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*推广期间机器人免费使用"
                        android:textColor="@color/color222222"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="使用过程中请勿在电脑/ipad等其他设备登录云发单微信 \n请勿使用新号登录，封号风险较大，因微信封号造成的损失，本工具概不负责 \n如果出现功能失效，请先退出并重新登录"
                        android:textColor="@color/color555555"
                        android:textSize="@dimen/font_12" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
