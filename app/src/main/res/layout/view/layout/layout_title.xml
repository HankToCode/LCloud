<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_title_height"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivToolbarBack"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_title_height"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:paddingStart="@dimen/layout_title_padding_start"
        android:paddingEnd="@dimen/layout_title_padding_end"
        android:src="@mipmap/icon_back"/>

    <TextView
        android:id="@+id/tvToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_centerInParent="true"
        android:textColor="@color/layout_toolbar_title"
        android:textSize="@dimen/font_18" />

    <LinearLayout
        android:id="@+id/llToolbarIcons"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layout_title_height"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">




    </LinearLayout>

</RelativeLayout>

