<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="14dp"
        android:paddingBottom="12dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvAveragePriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="均价(昨/今)"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:id="@+id/ivAveragePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvAveragePriceTitle"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@+id/tvAveragePriceTitle"
                    android:src="@mipmap/home_ascend" />

                <TextView
                    android:id="@+id/tvAveragePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAveragePriceTitle"
                    android:paddingEnd="@dimen/trading_center_icon_padding"
                    tools:text="$ 10.00" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAveragePriceTitle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/trading_center_icon_margin"
                    android:src="@mipmap/home_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvMaximumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高（昨/今）"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:id="@+id/ivMaximum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvMaximumTitle"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@+id/tvMaximumTitle"
                    android:src="@mipmap/home_ascend" />

                <TextView
                    android:id="@+id/tvMaximum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMaximumTitle"
                    android:paddingEnd="@dimen/trading_center_icon_padding"
                    tools:text="$ 10.00" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvMaximumTitle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/trading_center_icon_margin"
                    android:src="@mipmap/home_icon_02" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvCurrentMinimumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前最低"
                    android:textColor="@color/color_33" />

                <TextView
                    android:id="@+id/tvCurrentMinimum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCurrentMinimumTitle"
                    android:paddingEnd="@dimen/trading_center_icon_padding"
                    tools:text="$ 10.00" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCurrentMinimumTitle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/trading_center_icon_margin"
                    android:src="@mipmap/home_icon_03" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvFluctuationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格涨跌"
                    android:textColor="@color/color_33" />

                <ImageView
                    android:id="@+id/ivFluctuation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tvFluctuationTitle"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@+id/tvFluctuationTitle"
                    android:src="@mipmap/home_ascend" />

                <TextView
                    android:id="@+id/tvFluctuation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFluctuationTitle"
                    android:paddingEnd="@dimen/trading_center_icon_padding"
                    tools:text="$ 10.00" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFluctuationTitle"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/trading_center_icon_margin"
                    android:src="@mipmap/home_icon_04" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="@dimen/trading_center_view_width"
                    android:layout_height="@dimen/trading_center_view_height"
                    android:layout_marginTop="@dimen/trading_center_view_margin"
                    android:background="@color/color_f7aa3c" />

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/trading_center_name_margin_start"
                    android:text="昨天成交总量"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_11" />

                <TextView
                    android:id="@+id/tvYesterdayTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName1"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/font_12"
                    tools:text="12314444" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/gray_line_h_width"
                android:layout_height="@dimen/gray_line_h_height"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/trading_center_view_margin"
                android:layout_marginEnd="@dimen/trading_center_view_margin"
                android:background="@color/color_28" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="@dimen/trading_center_view_width"
                    android:layout_height="@dimen/trading_center_view_height"
                    android:layout_marginTop="@dimen/trading_center_view_margin"
                    android:background="@color/color_f7aa3c" />

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/trading_center_name_margin_start"
                    android:text="今日成交总量"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_11" />

                <TextView
                    android:id="@+id/tvTodayTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName2"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/font_12"
                    tools:text="12314444" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/gray_line_h_width"
                android:layout_height="@dimen/gray_line_h_height"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/trading_center_view_margin"
                android:layout_marginEnd="@dimen/trading_center_view_margin"
                android:background="@color/color_28" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="@dimen/trading_center_view_width"
                    android:layout_height="@dimen/trading_center_view_height"
                    android:layout_marginTop="@dimen/trading_center_view_margin"
                    android:background="@color/color_f7aa3c" />

                <TextView
                    android:id="@+id/tvName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/trading_center_name_margin_start"
                    android:text="历史总交易量"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_11" />

                <TextView
                    android:id="@+id/tvHistoryTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName3"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/font_12"
                    tools:text="12314444" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/gray_line_h_width"
                android:layout_height="@dimen/gray_line_h_height"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/trading_center_view_margin"
                android:layout_marginEnd="@dimen/trading_center_view_margin"
                android:background="@color/color_28" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <View
                    android:layout_width="@dimen/trading_center_view_width"
                    android:layout_height="@dimen/trading_center_view_height"
                    android:layout_marginTop="@dimen/trading_center_view_margin"
                    android:background="@color/color_f7aa3c" />

                <TextView
                    android:id="@+id/tvName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/trading_center_name_margin_start"
                    android:text="当前购买量"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_11" />

                <TextView
                    android:id="@+id/tvCurrentTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName4"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/font_12"
                    tools:text="12314444" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f6" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_trading_search"
        android:text="请输入手机号或邀请码搜索"
        android:textColor="@color/color_99" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/tv_trading_tag_icon"
                android:drawablePadding="@dimen/trading_tag_drawable_padding"
                android:ellipsize="marquee"
                android:gravity="center"
                android:paddingBottom="@dimen/trading_tag_tv_padding_bottom"
                android:text="单价"
                android:textColor="@drawable/tv_trading_tag_color"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/tv_trading_tag_icon"
                android:drawablePadding="@dimen/trading_tag_drawable_padding"
                android:ellipsize="marquee"
                android:gravity="center"
                android:paddingBottom="@dimen/trading_tag_tv_padding_bottom"
                android:text="时间"
                android:textColor="@drawable/tv_trading_tag_color"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/tv_trading_tag_icon"
                android:drawablePadding="@dimen/trading_tag_drawable_padding"
                android:ellipsize="marquee"
                android:gravity="center"
                android:paddingBottom="@dimen/trading_tag_tv_padding_bottom"
                android:text="数量"
                android:textColor="@drawable/tv_trading_tag_color"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/tv_trading_tag_icon2"
                android:drawablePadding="@dimen/trading_tag_drawable_padding"
                android:ellipsize="marquee"
                android:gravity="center"
                android:paddingBottom="@dimen/trading_tag_tv_padding_bottom"
                android:text="筛选"
                android:textColor="@drawable/tv_trading_tag_color"
                android:textSize="@dimen/font_13" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

