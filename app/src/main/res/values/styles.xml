<resources>

    <style name="BackStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:src">@mipmap/icon_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:onClick">back</item>-->
    </style>

    <style name="OrangeButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_orange_and_gray</item>
        <item name="android:textColor">@drawable/selector_white_and_gray_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--全局输入框基础样式-->
    <style name="ETTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/color999999</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>



</resources>
